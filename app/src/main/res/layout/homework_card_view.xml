<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="4dp"

    card_view:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/cardview_hwname_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organic worksheet"
            android:textColor="@android:color/black"
            android:textSize="34sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />

        <CheckBox
            android:id="@+id/cardview_done_checkbox"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical" />

        <TextView
            android:id="@+id/cardview_subjectname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chemistry"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/cardview_duedate_textview"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Due: 29 Apr"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp" />


</FrameLayout>

    </android.support.v7.widget.CardView>